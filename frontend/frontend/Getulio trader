<script>
function analisar(){
fetch("https://SEU_BACKEND/analisar?symbol="+ativo.value+"&interval="+tempo.value)
.then(r=>r.json())
.then(d=>{
  let cls="neutro";
  if(d.decisao==="CALL") cls="call";
  if(d.decisao==="PUT") cls="put";
  resultado.innerHTML =
    `<div class="${cls}">${d.decisao}</div><br>
     RSI: ${d.rsi}<br>
     PreÃ§o: ${d.preco}`;
});
}
</script>

